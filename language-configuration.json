{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*:\\s*$",
    "decreaseIndentPattern": "^\\s*(elif|else)\\b.*:$"
  },
  "onEnterRules": [
    {
      "beforeText": "^.*:\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*(elif|else)\\b.*:$",
      "action": {
        "indent": "outdent"
      }
    }
  ]
}